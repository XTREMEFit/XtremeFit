---
export interface Props {
    home: string;
    generator: string;

}

const { home, generator} = Astro.props;
---

<div
    class="flex justify-center items-center bg-[#333] overflow-hidden"
    id="myTopnav"
>
    <img
        src="../../public/logo_x.png"
        alt="home"
        class="h-14 w-14 hover:cursor-pointer absolute left-0"
    />
    <a href="/" class={home}>Home</a>
    <a href="/generator" class={generator}>Generator</a>
    <a href="#about">About</a>
    <i class="fa fa-bars"></i>
</div>

<script></script>

<style>
    a {
        @apply block text-[#f2f2f2] text-center px-[16px] py-[14px] no-underline text-[17px] hover:bg-[#ddd] hover:text-[black];
    }

    a.active {
        background-color: #04aa6d;
        color: white;
    }

    @media screen and (max-width: 600px) {
        a:not(:first-child) {
            display: none;
        }
        a.icon {
            float: right;
            display: block;
        }
    }

    img{
        margin-top: 0.5rem;
        
        height: 4rem;
        width: 6rem;
    }
</style>
