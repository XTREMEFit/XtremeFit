<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Xtremefit</title>
        <style>
            datalist {
                display: flex;
                flex-direction: row;
                justify-content: space-between;
                writing-mode: sideways-lr;
                width: 300px;
            }

            option {
                padding: 0;
            }

            input[type="range"] {
                width: 300px;
                margin: 0;
            }

            body {
                font-family: Arial, sans-serif;
                text-align: center;
                background-color: white;
                margin: 0;
                padding: 0;
            }

            h1 {
                color: black;
            }

            #preferences-form {
                background-color: #fff;
                padding: 20px;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
                margin: 20px auto;
                width: fit-content;
            }

            .form-group {
                margin-bottom: 15px;
            }

            label {
                display: block;
                font-weight: bold;
            }

            input[type="number"],
            input[type="range"] {
                width: 100%;
                padding: 5px;
                border: 1px solid #ccc;
                border-radius: 3px;
            }

            button {
                background-color: #007bff;
                color: #fff;
                padding: 10px 20px;
                border: none;
                border-radius: 3px;
                cursor: pointer;
            }

            button:hover {
                background-color: #0056b3;
            }

            .result {
                background-color: #fff;
                padding: 20px;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
                margin: 20px auto;
                width: 300px;
                justify-items: center;
                align-items: center;
                align-content: center;
                justify-content: center;
            }

            ul {
                list-style: none;
            }
        </style>
    </head>

    <body>
        <form id="preferences-form">
            <div class="form-group">
                <label>Muskelgrupper:</label>
                <label
                    ><input
                        type="checkbox"
                        name="muskelgrupper"
                        value="Bröst"
                    /> Bröst</label
                >
                <label
                    ><input type="checkbox" name="muskelgrupper" value="Rygg" />
                    Rygg</label
                >
                <label
                    ><input
                        type="checkbox"
                        name="muskelgrupper"
                        value="Biceps"
                    /> Biceps</label
                >
                <label
                    ><input
                        type="checkbox"
                        name="muskelgrupper"
                        value="Triceps"
                    /> Triceps</label
                >
                <label
                    ><input
                        type="checkbox"
                        name="muskelgrupper"
                        value="Axlar"
                    /> Axlar</label
                >
                <label
                    ><input type="checkbox" name="muskelgrupper" value="Abs" />
                    Abs</label
                >
                <label
                    ><input type="checkbox" name="muskelgrupper" value="Ben" />
                    Ben</label
                >
            </div>
            <div class="form-group">
                <label for="tid">Tillgänglig tid (minuter):</label>
                <input type="number" id="tid" name="tid" required />
            </div>
            <div class="form-group">
                <label for="intensitet">Önskad intensitet:</label>
                <input
                    type="range"
                    name="intensitet"
                    id="intensitet"
                    step="50"
                    list="nivå"
                />
                <datalist id="nivå">
                    <option value="0" label="Låg" class="bar"></option>
                    <option value="50" label="Medel" class="bar1"></option>
                    <option value="100" label="Hög"></option>
                </datalist>
            </div>
            <button type="button" id="generate-button"
                >Generera träningsprogram</button
            >
        </form>
        <div id="träningsprogram" class="result">
            <ul id="träningsprogram-list"></ul>
        </div>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const form = document.getElementById("preferences-form");
                const generateButton =
                    document.getElementById("generate-button");
                const exercisesSelect = document.querySelectorAll(
                    'input[name="muskelgrupper"]',
                );
                const intensityValue = document.getElementById("intensitet");

                // JSON-databas med övningar och muskelgrupper
                const exercisesDatabase = {
                    Bröst: ["Benchpress", "Chest Flyes", "Incline Benchpress"],
                    Rygg: ["Lat Pulldown", "Pull-ups", "Rows"],
                    Biceps: [
                        "Incline Dumbbell Curls",
                        "Hammer Curls",
                        "Preacher Curls",
                    ],
                    Triceps: [
                        "Dips",
                        "Overhead Extensions",
                        "Triceps Pushdown(Rope)",
                    ],
                    Axlar: [
                        "Overhead Press",
                        "Cable Lateral Raises",
                        "Face Pulls",
                    ],
                    Abs: ["Sit ups", "Leg raises", "Russian Twist"],
                    Ben: ["Squat", "Romanian Deadlift", "Standing Calf Raises"],
                };

                generateButton.addEventListener("click", function () {
                    const selectedMuscleGroups = [...exercisesSelect]
                        .filter((checkbox) => checkbox.checked)
                        .map((checkbox) => checkbox.value);
                    const tid = form.tid.value;
                    const intensitetValue = form.intensitet.value;
                    const intensitet = getIntensityLabel(intensitetValue);

                    // Hämta övningar baserat på de valda muskelgrupperna
                    const selectedExercises = selectedMuscleGroups.flatMap(
                        (muskelgrupp) => exercisesDatabase[muskelgrupp],
                    );

                    // Här kan du implementera din egen logik för att generera träningsprogram baserat på användarpreferenser
                    const träningsprogram = generateTrainingProgram(
                        selectedMuscleGroups,
                        tid,
                        intensitet,
                        selectedExercises,
                    );

                    displayTrainingProgram(träningsprogram);
                    intensityValue.textContent = intensitet;
                });

                function getIntensityLabel(intensitetValue) {
                    if (intensitetValue == 0) {
                        return "Låg: 30-40% ansträngning";
                    } else if (intensitetValue == 50) {
                        return "Medel: 50-70% ansträngning";
                    } else if (intensitetValue == 100) {
                        return "Hög: 80-90% ansträngning";
                    } else {
                        return "Okänd"; // Om värdet inte matchar något av de kända värdena
                    }
                }

                function generateTrainingProgram(
                    selectedMuscleGroups,
                    tid,
                    intensitet,
                    selectedExercises,
                ) {
                    // Här kan du använda selectedExercises för att inkludera övningarna i träningsprogrammet
                    let program = `Ditt träningsprogram:\nMuskelgrupper: ${selectedMuscleGroups.join(
                        ", ",
                    )}\nTräningstid: ${tid} minuter\nÖnskad intensitet: ${intensitet}\n\n`;

                    if (selectedExercises.length > 0) {
                        program += "Övningar:\n";
                        selectedExercises.forEach((exercise, index) => {
                            program += `${index + 1}. ${exercise}\n`;
                        });
                    }

                    return program;
                }

                function displayTrainingProgram(träningsprogram) {
                    const programList = document.getElementById(
                        "träningsprogram-list",
                    );

                    if (träningsprogram) {
                        programList.innerHTML = ""; // Rensa tidigare resultat
                        träningsprogram.split("\n").forEach((item) => {
                            const listItem = document.createElement("li");
                            listItem.textContent = item;
                            programList.appendChild(listItem);
                        });
                    }
                }
            });
        </script>
    </body>
</html>
